<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/book_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="3dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:weightSum="9"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:id="@+id/book_name"
                android:textSize="12dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="BOOK NAME"
                android:textColor="@color/header"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/book_availability"
                android:textSize="11dp"
                android:gravity="center"
                android:text="AVAILABILITY"
                android:textColor="@color/green"/>
        </LinearLayout>

        <View
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "1.5dp"
            android:background="@color/lightwhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:weightSum="10"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_margin="4dp"
                android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/book_img"
                android:minHeight="75dp"
                android:minWidth="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
            </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:weightSum="16"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_publication"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Publication"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_weight="3"/>


                <TextView
                    android:id="@+id/book_author"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="14dp"
                   android:text="Author : a.b.keshte"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="horizontal">




                        <TextView
                            android:id="@+id/book_discounted_price"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:text="â‚¹ 300"/>


                                <TextView
                                    android:id="@+id/book_original_price"
                                    android:layout_width="wrap_content"
                                  android:gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="match_parent"
                                    android:text="518" />



                        <TextView
                            android:id="@+id/book_discount"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                           android:textColor="@color/green"
                            android:text="30% off"/>
                    </LinearLayout>
                        <View
                    android:layout_marginEnd="4dp"
                    android:id="@+id/SplitLine_hor"
                    android:layout_width="match_parent"
                    android:layout_height= "1.5dp"
                    android:background="@color/lightwhite" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="10"
                    android:gravity="center"
                    android:layout_weight="6">
                    <LinearLayout
                        android:id="@+id/remove_layout"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="5">
                        <TextView
                            android:id="@+id/remove_item"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remove Item"
                            android:gravity="center"
                            android:textColor="@color/red"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="5">
                    <Button
                        android:minHeight="30dp"
                        android:minWidth="70dp"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif"
                        android:background="@color/green"
                       android:id="@+id/add"
                        android:text="ADD"
                        />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>