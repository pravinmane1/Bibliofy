<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".ProfileEditActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:background="@color/header"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/save"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_save"/>

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_close_light"/>

        <androidx.cardview.widget.CardView
            android:transitionName="photo_card_transition"
            android:layout_centerInParent="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardElevation="10dp"
            android:id="@+id/civd"
            app:cardCornerRadius="80dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:layout_height="160dp"
                android:layout_width="match_parent"
                android:id="@+id/edit_photo"
                android:src="@drawable/userdisplay"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView
                >
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:focusable="true" android:focusableInTouchMode="true"
        app:cardElevation="5dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-20dp"
        android:layout_alignBottom="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:hint="User Name"
            android:gravity="center"
            android:id="@+id/edit_name"
            android:minWidth="100dp"
            android:transitionName="name_transition"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/user_data_card"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/header"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:padding="15dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_action_email"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/user_email"
                    android:textSize="18sp"
                    android:hint="Email"
                    android:gravity="left"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Change"
                    android:textColor="@color/red"
                    android:id="@+id/change_email"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:padding="15dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_action_phone"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:singleLine="true"
                    android:id="@+id/user_phone"
                    android:textSize="18sp"
                    android:hint="Phone number"
                    android:gravity="start"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/phone_status"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:padding="10dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_action_college"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:enabled="false"
                    android:hint="College"
                    android:id="@+id/edit_college"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:padding="10dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_action_course"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:hint="Course"
                    android:id="@+id/edit_course"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Change"
                    android:textColor="@color/red"
                    android:id="@+id/change_course"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_action_address"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:drawableLeft="@drawable/circle"
                    android:drawablePadding="2dp"
                    android:textSize="18sp"
                    android:text="Wadia college campus pune"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:drawableLeft="@drawable/circle"
                    android:drawablePadding="2dp"
                    android:textSize="18sp"
                    android:text="Bhopla chowk pune"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/addresses"
                    android:drawablePadding="2dp"
                    android:textSize="18sp"
                    android:text=" "
                    android:drawableRight="@drawable/ic_action_add"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/change_password"
            android:background="@color/header"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:gravity="center"/>
        </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/user_settings"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/user_data_card"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
</RelativeLayout>
</ScrollView>